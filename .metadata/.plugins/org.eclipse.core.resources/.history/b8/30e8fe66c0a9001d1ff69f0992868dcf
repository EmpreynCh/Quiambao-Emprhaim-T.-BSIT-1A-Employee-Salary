	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
		if(e.getSource() == button1) {
			
			double output1, output2, output3, output4, GrossPay, SSS, PhilHealth, Pagibig, Tax, Total, Insert;
		 
			output1 = Double.parseDouble(t4.getText());
			output2 = Double.parseDouble(t5.getText());
			output3 = Double.parseDouble(t6.getText());
			output4 = Double.parseDouble(t7.getText());
						
				t8.setText(t1.getText());
				t9.setText(t2.getText());
				t10.setText(t3.getText());
				t11.setText(t4.getText());
				t12.setText(t5.getText());
				t13.setText(t6.getText());
				t14.setText(t7.getText());
                     
				     GrossPay = output1 * (output2 *(output3 + output4));
					  SSS = GrossPay * .5; 
					  PhilHealth = GrossPay * .10;
					  Pagibig =GrossPay * .25;
					  Tax = GrossPay * .50;
					  Total = SSS + PhilHealth+ Pagibig + Tax;
					  Insert = GrossPay - Total;
               	
					  t15.setText(String.valueOf(String.format("%.2f",GrossPay)));
				      t16.setText(String.valueOf(String.format("%.2f",SSS)));
				      t17.setText(String.valueOf(String.format("%.2f",PhilHealth)));
				      t18.setText(String.valueOf(String.format("%.2f",Pagibig)));
				      t19.setText(String.valueOf(String.format("%.2f",Tax)));
				      t20.setText(String.valueOf(String.format("%.2f",Total)));
				      t21.setText(String.valueOf(String.format("%.2f",Insert)));
				
		}		
			else if (e.getSource() == button2) {
			
					t1.setText("");t2.setText("");t3.setText("");t4.setText("0");t5.setText("0");t6.setText("0");t7.setText("0");
					t8.setText("");t9.setText("");t10.setText("");t11.setText("");t12.setText("");t13.setText("");t14.setText("");			
					t15.setText("");t16.setText("");t17.setText("");t18.setText("");t19.setText("");t20.setText("");t21.setText("");
		}
	}
}

		


							

			
			
			

   
			
			



		
